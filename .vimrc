set nocp
filetype plugin on

colorscheme blue
set guifont=Monospace\ 12
set hlsearch 

set expandtab
set tabstop=2
set shiftwidth=2

set ignorecase

set laststatus=2
"set statusline=%{FugitiveStatusline()}
let &t_SI = "\e[5 q"
let &t_EI = "\e[2 q"

let g:netrw_liststyle = 3
let g:netrw_banner = 0
let g:netrw_browse_split = 4
let g:netrw_winsize = 25
